{
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "prettier",
    "import"
  ],
  "rules": {
    "prettier/prettier": "error",
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": "const",
        "next": "const"
      },
      {
        "blankLine": "always",
        "prev": "let",
        "next": "let"
      },
      {
        "blankLine": "always",
        "prev": "var",
        "next": "var"
      },
      {
        "blankLine": "always",
        "prev": "function",
        "next": "function"
      },
      {
        "blankLine": "always",
        "prev": "block",
        "next": "function"
      }
    ]
  }
}
